@model Slider
@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid">

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Slider Create</h1>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="create" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Order">Order</label>
                    <input asp-for="Order" value="@ViewBag.Order" class="form-control" placeholder="Enter Order">
                    <span class="text-danger" asp-validation-for="Order"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Title1">Title1</label>
                    <input asp-for="Title1" type="text" class="form-control" placeholder="Enter Title1">
                    <span class="text-danger" asp-validation-for="Title1"></span>
                </div>
                   <div class="form-group">
                    <label asp-for="Title2">Title2</label>
                    <input asp-for="Title2" type="text" class="form-control" placeholder="Enter Title2">
                    <span class="text-danger" asp-validation-for="Title2"></span>
                </div>
                   <div class="form-group">
                    <label asp-for="BtnText">BtnText</label>
                    <input asp-for="BtnText" type="text" class="form-control" placeholder="Enter BtnText">
                    <span class="text-danger" asp-validation-for="BtnText"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BtnUrl">BtnUrl</label>
                    <input asp-for="BtnUrl" type="text" class="form-control" placeholder="Enter BtnUrl">
                    <span class="text-danger" asp-validation-for="BtnUrl"></span>
                </div>
                <div class="form-group">
                    <label >Image File</label>
                    <input asp-for="ImageFile" accept="image/*" class="form-control" placeholder="Enter ImageFile">
                    <span class="text-danger" asp-validation-for="ImageFile"></span>
                </div>
                 <div class="form-group">
                    <label asp-for="Desc">Desc</label>
                    <textarea asp-for="Desc" rows="3" type="text" class="form-control" placeholder="Enter Desc"></textarea>
                    <span class="text-danger" asp-validation-for="Desc"></span>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>



@section Scripts{
    @Html.Partial("_ValidationScriptsPartial")

}



